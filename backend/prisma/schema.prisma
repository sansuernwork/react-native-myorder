// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id    Int     @id @default(autoincrement())
  email String
  name  String?
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  cost_price  Decimal
  price       Decimal
  stock       Int
  image       String?
  created_at  DateTime?
}
